{
  "name": "Java 21",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installGradle": "true"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "aws-cli": "latest"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-spring-initializr",
        "vscjava.vscode-gradle",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}